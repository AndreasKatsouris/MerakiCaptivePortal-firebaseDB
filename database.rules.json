{
  "rules": {
    ".read": true,
    ".write": true,
    "scanningData": {
      ".read": true,
      ".write": true
    },
  "customization": {
      ".read": true,
      ".write": true
    },
    "campaigns": {
      ".indexOn": ["status", "brandName"],
      ".read": true,
      ".write": true
    },
    "rewards": {
      ".indexOn": ["status", "guestPhone", "campaignId"],
      ".read": true,
      ".write": true
    },
    "rewardTypes": {
      ".indexOn": ["status", "category"],
      ".read": true,
      ".write": true
    },
"receipts": {
  ".indexOn": ["phoneNumber", "guestPhoneNumber"],
  ".read": true,
  ".write": true
  },
  "googleReviews": {
    ".read": "auth != null",
    ".write": "auth != null && auth.token.admin === true",
    "$reviewId": {
      ".validate": "newData.hasChildren(['reviewerName', 'rating', 'text', 'timestamp'])",
      "rating": {
        ".validate": "newData.isNumber() && newData.val() >= 1 && newData.val() <= 5"
      },
      "timestamp": {
        ".validate": "newData.isNumber()"
      }
    }
  }
}
}
# Environment Configuration Template
# Copy this file to .env in the appropriate directory and update with your actual values

# ========================================
# TWILIO CONFIGURATION
# ========================================

# Twilio Account Credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=whatsapp:+14155238886  # Your Twilio WhatsApp Sandbox or approved number

# Twilio WhatsApp Templates (Optional - for pre-approved templates)
USE_TWILIO_TEMPLATES=false
TWILIO_CONTENT_SID_BOOKING_CONFIRMATION=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_CONTENT_SID_BOOKING_STATUS=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_CONTENT_SID_BOOKING_REMINDER=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_CONTENT_SID_RECEIPT=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_CONTENT_SID_WELCOME=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Twilio Messaging Service SID
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# FIREBASE CONFIGURATION
# ========================================

# Firebase Project Settings
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase Service Account (for Cloud Functions)
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Firebase API Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# ========================================
# SENDGRID CONFIGURATION
# ========================================

# SendGrid API Key (for email marketing and contact sync)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ========================================
# GOOGLE CLOUD CONFIGURATION
# ========================================

# Google Cloud Vision API (for receipt OCR)
GOOGLE_CLOUD_VISION_API_KEY=your_vision_api_key_here

# ========================================
# MERAKI CONFIGURATION
# ========================================

# Meraki Dashboard API
MERAKI_API_KEY=your_meraki_api_key_here
MERAKI_ORGANIZATION_ID=your_organization_id
MERAKI_NETWORK_ID=your_network_id

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Environment
NODE_ENV=development  # development | staging | production

# Application URLs
APP_URL=http://localhost:5000
ADMIN_DASHBOARD_URL=http://localhost:5000/admin-dashboard.html

# Feature Flags
ENABLE_QUEUE_MANAGEMENT=true
ENABLE_RECEIPT_PROCESSING=true
ENABLE_BOOKING_SYSTEM=true
ENABLE_FOOD_COST_MODULE=true
ENABLE_CAMPAIGNS=true

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Session Secret (generate a strong random string)
SESSION_SECRET=your_session_secret_here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5000,https://your-domain.com

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Firebase Realtime Database Rules
# (Configured via Firebase Console)

# ========================================
# NOTIFICATIONS CONFIGURATION
# ========================================

# Notification Preferences
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# ========================================
# DEBUGGING & LOGGING
# ========================================

# Log Level (error | warn | info | debug)
LOG_LEVEL=info

# Enable Debug Mode
DEBUG=false

# ========================================
# SETUP INSTRUCTIONS
# ========================================

# 1. Copy this file:
#    cp .env.template .env
#
# 2. Update all values marked with "your_" prefix
#
# 3. For Twilio WhatsApp Templates:
#    - Go to Twilio Console > Messaging > Content Template Builder
#    - Create templates using the examples in functions/.env.template
#    - Submit for WhatsApp approval (24-48 hours)
#    - Update TWILIO_CONTENT_SID_* values with approved ContentSid
#    - Set USE_TWILIO_TEMPLATES=true
#
# 4. For Firebase:
#    - Get credentials from Firebase Console > Project Settings
#    - Download service account key for Cloud Functions
#
# 5. For SendGrid:
#    - Create API key in SendGrid Console
#    - Set up sender authentication
#
# 6. Never commit .env files to version control!
#    (Already included in .gitignore)
